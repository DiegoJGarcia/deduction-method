{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",  // Esto asegura que los alias funcionen
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "elements/*": ["elements/*"],
      "layouts/*": ["layouts/*"],
      "domain/*": ["domain/*"],
      "global/*": ["global/*"],
      "utils/*": ["utils/*"],
      "common/*": ["common/*"],
      "hooks/*": ["hooks/*"],
      "pages/*": ["pages/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
